<h2>Lista de instituições: </h2>
<hr>
<a href="/admin/categorias/add"><button type="button" class="btn btn-success">Nova Instituição</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Endereco: {{endereco}}</small>
            <br>
            <small>Data de inclusão: {{date}}</small>
            <a href="/admin/categorias/edit/{{_id}}"><button type="button" class="btn btn-success">Editar</button></a>
            <form action="/admin/categorias/deletar/{{_id}}" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar</button>
            </form>
        </div>
    </div>
{{else}}

{{/each}}

